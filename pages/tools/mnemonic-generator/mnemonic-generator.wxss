/* 苹果毛玻璃风格助记密码生成器 */
.modern-mnemonic-page {
  background: #ffffff;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

.modern-mnemonic-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="30" cy="30" r="1" fill="rgba(0,0,0,0.03)"/><circle cx="70" cy="50" r="0.5" fill="rgba(0,0,0,0.03)"/><circle cx="50" cy="70" r="1.2" fill="rgba(0,0,0,0.03)"/></svg>');
  opacity: 0.6;
  pointer-events: none;
}

/* 页面标题区域 */
.mnemonic-header {
  text-align: center;
  padding: 80rpx 0 60rpx;
  color: #24292f;
}

.mnemonic-title {
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  color: #24292f;
  letter-spacing: 1rpx;
}

.mnemonic-subtitle {
  font-size: 26rpx;
  color: #8b949e;
  line-height: 1.4;
  max-width: 500rpx;
  margin: 0 auto;
}

/* 主要内容区域 */
.modern-mnemonic-container {
  padding: 0 32rpx 120rpx;
  position: relative;
  z-index: 1;
}

/* 输入区域卡片 */
.input-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.input-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 212, 170, 0.08) 0%, rgba(0, 212, 170, 0.04) 100%);
  pointer-events: none;
}

/* 输入项 */
.input-group {
  margin-bottom: 32rpx;
  position: relative;
}

.input-group:last-child {
  margin-bottom: 0;
}

.input-label {
  display: block;
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.input-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.input-hint {
  font-size: 24rpx;
  color: #888;
  margin-top: 8rpx;
  line-height: 1.4;
}

.modern-input {
  width: 100%;
  height: 96rpx;
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid rgba(0, 0, 0, 0.08);
  border-radius: 24rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  transition: all 0.3s ease;
  position: relative;
  z-index: 1;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.modern-input:focus {
  border-color: #00d4aa;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0 0 0 4rpx rgba(0, 212, 170, 0.15);
  transform: translateY(-1rpx);
}

.modern-input.password {
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  letter-spacing: 2rpx;
}

/* 密码可见性切换 */
.visibility-toggle {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 212, 170, 0.1);
  border: none;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  transition: all 0.2s ease;
}

.visibility-toggle:active {
  background: rgba(0, 212, 170, 0.2);
  transform: translateY(-50%) scale(0.95);
}

.visibility-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.6;
}

/* 生成按钮 */
.generate-section {
  margin-bottom: 40rpx;
}

.generate-main-btn {
  width: 100%;
  height: 96rpx;
  background: #00d4aa;
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 170, 0.3);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.generate-main-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.generate-main-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(0, 212, 170, 0.4);
}

.generate-main-btn:active::before {
  left: 100%;
}

.generate-main-btn.disabled {
  background: rgba(0, 0, 0, 0.1);
  color: rgba(0, 0, 0, 0.4);
  box-shadow: none;
}

/* 快捷操作按钮 */
.quick-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.quick-btn {
  flex: 1;
  height: 72rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: #00d4aa;
  font-size: 26rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.quick-btn:active {
  transform: scale(0.95);
  background: rgba(0, 212, 170, 0.1);
}

/* 结果显示区域 */
.result-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
}

.result-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 212, 170, 0.08) 0%, rgba(0, 212, 170, 0.04) 100%);
  pointer-events: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.result-title {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.result-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.result-info {
  font-size: 24rpx;
  color: #888;
  background: rgba(0, 0, 0, 0.05);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.result-display {
  background: rgba(255, 255, 255, 0.95);
  border: 2rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 24rpx;
  padding: 36rpx 40rpx;
  min-height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-size: 34rpx;
  color: #1a1a1a;
  font-weight: 600;
  word-break: break-all;
  text-align: center;
  line-height: 1.4;
  position: relative;
  z-index: 1;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  letter-spacing: 1rpx;
}

.result-display:active {
  background: rgba(0, 212, 170, 0.08);
  border-color: #00d4aa;
  transform: scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 170, 0.2);
}

/* 功能按钮区域 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: #00d4aa;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(0, 212, 170, 0.1);
}

.action-btn.primary {
  background: #00d4aa;
  color: white;
}

/* 安全提示 */
.security-tips {
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  border: 1rpx solid rgba(255, 59, 48, 0.2);
  position: relative;
}

.security-tips::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 8rpx;
  background: linear-gradient(135deg, #ff3b30 0%, #ff6b6b 100%);
  border-radius: 20rpx 0 0 20rpx;
}

.tips-title {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.tips-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.tips-content {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .modern-mnemonic-container {
    padding: 0 24rpx 100rpx;
  }

  .mnemonic-header {
    padding: 60rpx 0 40rpx;
  }

  .input-section {
    padding: 32rpx 24rpx;
  }

  .result-section {
    padding: 32rpx 24rpx;
  }

  .quick-actions {
    flex-direction: column;
  }

  .quick-btn {
    height: 60rpx;
  }
}

/* 按钮图标尺寸 */
.btn-icon {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.2s ease;
}

.generate-main-btn:active .btn-icon {
  transform: rotate(180deg);
}
