page {
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh; /* 确保页面占据整个视口高度 */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.08);
}

.qrcode-wrapper {
  margin-bottom: 40rpx;
}

.tip-text {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 40rpx;
}

.save-btn {
  background-color: #07c160;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  width: auto;
  min-width: 300rpx;
}
.save-btn::after { border: none; }
