/* 现代化安全报告页面 - 苹果白色风格 */
.security-report-page {
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 50%, #cbd5e1 100%);
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

.security-report-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="20" cy="20" r="2" fill="rgba(0,0,0,0.02)"/><circle cx="80" cy="40" r="1" fill="rgba(0,0,0,0.02)"/><circle cx="40" cy="80" r="1.5" fill="rgba(0,0,0,0.02)"/></svg>');
  opacity: 0.4;
  pointer-events: none;
}

.security-report-container {
  padding: 60rpx 32rpx 120rpx;
  position: relative;
  z-index: 1;
}

/* 移除了页面标题样式 */

/* 安全分数卡片 */
.security-score-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  text-align: center;
}

.security-score-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
  pointer-events: none;
}

.score-display {
  margin-bottom: 30rpx;
}

.score-number {
  font-size: 120rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  line-height: 1;
  margin-bottom: 20rpx;
}

.score-unit {
  font-size: 40rpx;
  color: #667eea;
  font-weight: 600;
  margin-left: 10rpx;
}

.score-label {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.summary-text {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 500;
  line-height: 1.4;
}

/* 安全统计卡片 */
.stats-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 24rpx 16rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 700;
  color: #667eea;
  line-height: 1;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 问题列表 */
.issues-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.issues-title {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.issues-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.8;
}

.issue-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.issue-item:active {
  transform: scale(0.98);
  background: rgba(102, 126, 234, 0.05);
}

.issue-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.issue-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.issue-icon.weak {
  background: rgba(255, 59, 48, 0.1);
}

.issue-icon.reused {
  background: rgba(255, 149, 0, 0.1);
}

.issue-icon.old {
  background: rgba(52, 199, 89, 0.1);
}

.issue-img {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.8;
}

.issue-text {
  flex: 1;
}

.issue-name {
  font-size: 30rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.issue-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.issue-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.issue-count {
  font-size: 24rpx;
  color: white;
  background: #667eea;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 600;
  min-width: 36rpx;
  text-align: center;
}

.issue-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

/* 安全建议卡片 */
.suggestions-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.suggestions-title {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 16rpx;
}

.suggestion-icon {
  width: 36rpx;
  height: 36rpx;
  margin-top: 2rpx;
  opacity: 0.7;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.suggestion-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}



/* 功能按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: #667eea;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(102, 126, 234, 0.1);
}

.action-btn.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.action-btn.full-width {
  width: 100%;
  max-width: 600rpx;
  margin: 0 auto;
}

/* 按钮图标样式 */
.btn-icon {
  width: 36rpx;
  height: 36rpx;
  transition: transform 0.2s ease;
}

.action-btn:active .btn-icon {
  transform: scale(0.95);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .security-report-container {
    padding: 0 24rpx 100rpx;
  }

  .stats-grid {
    grid-template-columns: 1fr;
    gap: 16rpx;
  }

  .action-buttons {
    flex-direction: column;
  }

  .action-btn {
    height: 72rpx;
  }
}
