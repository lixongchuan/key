/* 复用首页大部分样式 */
page {
  background-color: #f7f8fa;
}
.container {
  padding: 20rpx;
}

/* --- 双列网格布局 --- */
.vault-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.vault-card {
  width: 48.5%;
  background-color: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  flex-direction: column;
  transition: transform 0.2s;
}
.vault-card:active {
  transform: scale(0.98);
}

/* --- 内部卡片元素样式 --- */
.card-header { display: flex; align-items: center; margin-bottom: 25rpx; }
.card-icon { width: 48rpx; height: 48rpx; margin-right: 20rpx; }
.card-title { flex: 1; font-size: 34rpx; font-weight: 500; color: #333; }

.card-body { 
  padding-left: 68rpx;
  margin-bottom: 25rpx; 
  flex-grow: 1;
}
.card-field { display: flex; align-items: center; margin-bottom: 12rpx; }
.field-label { font-size: 26rpx; color: #999; width: 80rpx; }
.field-value { font-size: 28rpx; color: #555; }

.card-footer { 
  display: flex; 
  justify-content: flex-end; 
  padding-top: 20rpx; 
  border-top: 1rpx solid #f5f5f5; 
  margin-top: auto;
}
/* 【修改】这是一个占位按钮样式，使其看起来像一个可点击的标签 */
.copy-btn-placeholder {
  background-color: #f2f2f2;
  color: #333;
  font-size: 26rpx;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
}
.copy-btn-placeholder::after { border: none; }

/* --- 空状态 --- */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
  text-align: center;
}
.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}
.empty-text {
  font-size: 32rpx;
  color: #888;
}
