/* 苹果毛玻璃风格强密码生成器 */
.modern-generator-page {
  background: #ffffff;
  min-height: 100vh;
  position: relative;
  overflow-x: hidden;
}

.modern-generator-page::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="30" cy="30" r="1" fill="rgba(0,0,0,0.03)"/><circle cx="70" cy="50" r="0.5" fill="rgba(0,0,0,0.03)"/><circle cx="50" cy="70" r="1.2" fill="rgba(0,0,0,0.03)"/></svg>');
  opacity: 0.6;
  pointer-events: none;
}

.modern-generator-container {
  padding: 0 32rpx 120rpx;
  position: relative;
  z-index: 1;
}

/* 页面标题 */
.generator-header {
  text-align: center;
  padding: 80rpx 0 60rpx;
  color: #24292f;
}

.generator-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #24292f;
  letter-spacing: 1rpx;
}

/* 密码显示区域 */
.password-display-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  min-height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.password-display-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(0, 212, 170, 0.08) 0%, rgba(0, 212, 170, 0.04) 100%);
  pointer-events: none;
}

.password-display-card:active {
  transform: scale(0.98);
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

.generated-password-display {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #1a1a1a;
  word-break: break-all;
  text-align: center;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
  font-weight: 600;
  line-height: 1.2;
  position: relative;
  z-index: 1;
  flex-shrink: 0;
}

.placeholder-text {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 32rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  font-weight: 400;
  text-align: center;
  line-height: 1.2;
  flex-shrink: 0;
}

/* 密码强度指示器 */
.password-strength {
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  background: rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
}

.strength-indicator {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.strength-bar {
  flex: 1;
  height: 8rpx;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
  position: relative;
}

.strength-fill {
  height: 100%;
  background: linear-gradient(90deg, #ff3b30 0%, #ff9500 25%, #ffcc00 50%, #34c759 75%, #007aff 100%);
  transition: width 0.3s ease;
  border-radius: 4rpx;
}

.strength-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.strength-label {
  font-size: 26rpx;
  color: #1a1a1a;
  font-weight: 600;
}

/* 生成器选项 */
.generator-options {
  margin-bottom: 60rpx;
}

.option-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

/* 长度滑块 */
.length-option {
  margin-bottom: 30rpx;
}

.length-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.length-label {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 600;
}

.length-value {
  font-size: 28rpx;
  color: #00d4aa;
  font-weight: 700;
  background: rgba(0, 212, 170, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.length-slider {
  width: 100%;
  height: 60rpx;
}

/* 字符类型选项 */
.character-options {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option-row {
  display: flex;
  gap: 16rpx;
}

.character-toggle {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
  min-height: 80rpx;
}

.character-toggle:active {
  transform: scale(0.95);
}

.character-toggle.active {
  background: rgba(0, 212, 170, 0.1);
  border-color: #00d4aa;
  color: #00d4aa;
}

.toggle-icon {
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Roboto Mono', monospace;
}

.toggle-label {
  font-size: 26rpx;
  font-weight: 500;
}

/* 生成按钮 */
.generator-actions {
  margin-bottom: 40rpx;
}

.generate-btn {
  width: 100%;
  height: 96rpx;
  background: #00d4aa;
  color: white;
  border: none;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 212, 170, 0.3);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

.generate-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.4);
}

.generate-btn:active::before {
  left: 100%;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  transition: transform 0.2s ease;
}

.generate-btn:active .btn-icon {
  transform: rotate(180deg);
}

/* 功能按钮区域 */
.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  color: #667eea;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.95);
  background: rgba(102, 126, 234, 0.1);
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .modern-generator-container {
    padding: 0 24rpx 100rpx;
  }

  .generator-header {
    padding: 60rpx 0 40rpx;
  }

  .password-display-card {
    padding: 40rpx 24rpx;
  }

  .character-types {
    grid-template-columns: 1fr;
  }
}
