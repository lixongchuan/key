/* 文件路径: pages/settings/export-selection/export-selection.wxss */
page {
  background-color: #f5f5f7; /* 苹果风格的浅灰色背景 */
}
.container {
  display: flex;
  flex-direction: column;
  height: 100vh; /* 确保容器占满整个视口高度 */
  padding-bottom: env(safe-area-inset-bottom); /* 适配底部安全区域 */
}

/* 顶部全选/全不选栏 */
.select-all-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
  flex-shrink: 0; /* 防止被压缩 */
}
.checkbox-label {
  display: flex;
  align-items: center;
}
.select-all-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-left: 10rpx;
}
.selected-count {
  font-size: 28rpx;
  color: #888;
}

/* 密码凭证列表 */
.vault-list {
  flex: 1; /* 占据剩余空间 */
  padding: 20rpx 40rpx;
  box-sizing: border-box;
}
.vault-item {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 15rpx rgba(0,0,0,0.05);
  transition: transform 0.2s ease;
}
.vault-item:active {
  transform: scale(0.98);
}
.item-checkbox {
  margin-right: 30rpx;
  transform: scale(0.9); /* 调整checkbox大小 */
}
.item-content {
  flex: 1;
}
.item-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}
.item-username {
  font-size: 28rpx;
  color: #888;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 150rpx;
  text-align: center;
}
.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}
.empty-text {
  font-size: 32rpx;
  color: #a0a0a0;
  line-height: 1.6;
  font-weight: 500;
}

/* 底部操作栏 */
.bottom-actions {
  flex-shrink: 0;
  padding: 30rpx 40rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 15rpx rgba(0,0,0,0.05);
}
.export-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #007AFF; /* 苹果蓝 */
  color: white;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.2);
  transition: all 0.2s ease;
}
.export-btn[disabled] {
  background-color: #a0cfff; /* 禁用状态的颜色 */
  box-shadow: none;
  opacity: 0.8;
}
.export-btn::after {
  border: none;
}
.export-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 122, 255, 0.3);
}

/* 弹窗样式 (与data-management.wxss保持一致) */
.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease;
}
.popup-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #ffffff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 40rpx;
  box-sizing: border-box;
  z-index: 1001;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.1);
}
.popup-mask.show {
  opacity: 1;
  visibility: visible;
}
.popup-container.show {
  transform: translateY(0);
}
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.popup-title {
  font-size: 38rpx;
  font-weight: 600;
  color: #333;
}
.close-icon {
  width: 48rpx;
  height: 48rpx;
  padding: 10rpx;
  opacity: 0.6;
}
.popup-content {
  padding-bottom: 20rpx;
}
.popup-desc {
  font-size: 28rpx;
  color: #888;
  margin-bottom: 30rpx;
  line-height: 1.5;
}
.popup-input {
  width: 100%;
  height: 96rpx;
  padding: 0 30rpx;
  background-color: #f7f7f7;
  border-radius: 16rpx;
  font-size: 32rpx;
  box-sizing: border-box;
  margin-bottom: 40rpx;
}
.popup-input .placeholder {
  color: #bbb;
}
.popup-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #007AFF;
  color: white;
  font-size: 34rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 122, 255, 0.2);
  transition: all 0.2s ease;
}
.popup-btn::after {
  border: none;
}
.popup-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 10rpx rgba(0, 122, 255, 0.3);
}
