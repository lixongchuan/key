/* Apple风格毛玻璃双重认证界面 */
.page {
  padding: 24rpx;
  background: #F2F2F7;
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  text-align: center;
  margin-bottom: 24rpx;
}

.title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 8rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(142, 142, 147, 0.9);
  font-weight: 400;
}

.card {
  padding: 32rpx;
  border-radius: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

/* 认证方式选择区域 */
.auth-section {
  margin-bottom: 16rpx;
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 8rpx;
}

.section-subtitle {
  display: block;
  font-size: 24rpx;
  color: rgba(142, 142, 147, 0.9);
  margin-bottom: 24rpx;
}

.auth-methods {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.auth-method {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-radius: 16rpx;
  background: rgba(142, 142, 147, 0.08);
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.auth-method:active {
  transform: scale(0.98);
  background: rgba(142, 142, 147, 0.12);
}

.auth-method.selected {
  border-color: rgba(0, 122, 255, 0.8);
  background: rgba(0, 122, 255, 0.08);
}

.auth-method.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.method-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.method-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.8);
}

.method-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.method-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #000000;
}

.method-desc {
  font-size: 24rpx;
  color: rgba(142, 142, 147, 0.9);
}

/* 单选按钮样式 */
.radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  border: 3rpx solid rgba(142, 142, 147, 0.5);
  position: relative;
  transition: all 0.2s ease;
}

.radio.checked {
  border-color: rgba(0, 122, 255, 0.8);
  background: rgba(0, 122, 255, 0.1);
}

.radio.checked::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  background: rgba(0, 122, 255, 0.8);
}

.radio.disabled {
  border-color: rgba(142, 142, 147, 0.3);
}

.field {
  position: relative;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 8rpx;
}

.label {
  width: 160rpx;
  color: #000000;
  font-size: 28rpx;
  font-weight: 500;
}

.input {
  flex: 1;
  background: rgba(142, 142, 147, 0.12);
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 48rpx 0 16rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 28rpx;
  color: #000000;
}

.input:focus {
  background: rgba(142, 142, 147, 0.2);
}

.eye {
  position: absolute;
  right: 16rpx;
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

.divider {
  height: 1rpx;
  background: rgba(0, 0, 0, 0.1);
  margin: 24rpx 0;
}

.strength {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.bar {
  width: 48rpx;
  height: 6rpx;
  background: rgba(142, 142, 147, 0.3);
  border-radius: 3rpx;
  transition: all 0.2s ease;
}

.bar.on:nth-child(1) { background: rgba(255, 59, 48, 0.8); }
.bar.on:nth-child(2) { background: rgba(255, 149, 0, 0.8); }
.bar.on:nth-child(3) { background: rgba(52, 199, 89, 0.8); }
.bar.on:nth-child(4) { background: rgba(52, 199, 89, 0.8); }

.strength-text {
  margin-left: 12rpx;
  color: rgba(142, 142, 147, 0.9);
  font-size: 24rpx;
  font-weight: 500;
}

.primary {
  width: 100%;
  height: 80rpx;
  border-radius: 16rpx;
  background: linear-gradient(135deg, #000000 0%, #333333 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin-top: 16rpx;
  transition: all 0.2s ease;
}

.primary:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.primary[disabled] {
  background: rgba(142, 142, 147, 0.3);
  color: rgba(142, 142, 147, 0.5);
}

/* 生物识别认证区域 */
.biometric-auth {
  padding: 24rpx 0;
}

.biometric-status {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  background: rgba(142, 142, 147, 0.08);
}

.biometric-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.7;
}

.biometric-text {
  flex: 1;
  font-size: 26rpx;
  color: #000000;
  font-weight: 500;
}

.biometric-btn {
  width: 100%;
  height: 64rpx;
  border-radius: 16rpx;
  background: rgba(0, 122, 255, 0.1);
  color: rgba(0, 122, 255, 0.9);
  font-size: 28rpx;
  font-weight: 600;
  border: 2rpx solid rgba(0, 122, 255, 0.3);
  transition: all 0.2s ease;
}

.biometric-btn:active {
  transform: scale(0.98);
  opacity: 0.8;
}

.biometric-btn.verified {
  background: rgba(52, 199, 89, 0.1);
  color: rgba(52, 199, 89, 0.9);
  border-color: rgba(52, 199, 89, 0.3);
}

.biometric-btn[disabled] {
  opacity: 0.6;
  pointer-events: none;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .page {
    padding: 16rpx;
  }

  .card {
    padding: 24rpx;
  }

  .method-left {
    gap: 12rpx;
  }

  .method-icon {
    width: 40rpx;
    height: 40rpx;
    font-size: 28rpx;
  }

  .method-title {
    font-size: 24rpx;
  }

  .method-desc {
    font-size: 22rpx;
  }

  .biometric-btn {
    height: 60rpx;
    font-size: 26rpx;
  }
}
