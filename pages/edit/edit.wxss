/* 文件路径: pages/edit/edit.wxss */
/* 重新设计的单屏显示 - 粉色主题 */

page {
  height: 100vh;
  background: #f8fafc;
  font-family: -apple-system, BlinkMacSystemFont, 'SF Pro Display', 'SF Pro Text', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  overflow: hidden;
}

/* 页面容器 */
.page-container {
  height: 100vh;
  position: relative;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f3f4 100%);
}

/* 主内容区域 - 占据除了底部按钮的全部空间 */
.main-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 120rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 表单输入区域 */
.input-section {
  flex-shrink: 0;
  margin-bottom: 24rpx;
}

/* 密码操作区域 */
.password-section {
  flex-shrink: 0;
  margin-bottom: 24rpx;
}

/* 附加信息区域 - 占用剩余空间 */
.additional-section {
  flex: 1;
  min-height: 0;
  display: flex;
  flex-direction: column;
}

.form-padding {
  padding: 0;
  box-sizing: border-box;
}

/* 苹果科技风格表单项 */
.form-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 0 28rpx;
  margin-bottom: 24rpx;
  height: 96rpx;
  position: relative;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 移除:focus-within，改用更通用的样式 */
.form-item.active {
  border-color: #007aff;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.15);
  transform: translateY(-2rpx);
}

.form-item:active {
  transform: translateY(-1rpx);
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.12);
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  opacity: 0.7;
}

.form-input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 400;
  background: transparent;
  border: none;
  outline: none;
}

.form-input::placeholder {
  color: rgba(142, 142, 147, 0.8);
  font-weight: 400;
}

.password-actions {
  display: flex;
  align-items: center;
}

.action-icon {
  width: 44rpx;
  height: 44rpx;
  margin-left: 30rpx;
}

.form-item.with-copy .form-input {
  padding-right: 80rpx; /* 避免文字和图标重叠 */
}

.form-item.with-copy .copy-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.guide-text {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 0 40rpx;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

/* 现代化生成按钮 */
.guide-text {
  text-align: center;
  font-size: 28rpx;
  color: #586069;
  padding: 0 40rpx;
  margin-bottom: 32rpx;
  line-height: 1.6;
  font-weight: 400;
}

/* 引导文字 - 统一的字体大小 */
.guide-text {
  text-align: center;
  font-size: 28rpx;
  color: rgba(142, 142, 147, 0.9);
  padding: 0 32rpx;
  margin-bottom: 28rpx;
  line-height: 1.6;
  font-weight: 400;
}

/* 粉色渐变生成按钮 */
.generate-btn-wrapper {
  margin-bottom: 32rpx;
}

.generate-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  border-radius: 20rpx;
  color: white;
  height: 88rpx;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.3);
  font-weight: 600;
  font-size: 32rpx;
  position: relative;
  overflow: hidden;
}

.generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.generate-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 2rpx 16rpx rgba(255, 107, 157, 0.4);
}

.generate-btn:active::before {
  left: 100%;
}

.btn-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  opacity: 0.9;
}

/* 按钮文字样式 - 确保白色 */
.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

/* 苹果科技风格section容器 */
.section-container {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
  height: 96rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  position: relative;
}

.section-header:active {
  background: rgba(0, 0, 0, 0.02);
  transform: translateY(-1rpx);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 600;
  letter-spacing: 0.3rpx;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.7;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
}

.arrow-icon.expanded {
  transform: rotate(180deg);
  opacity: 0.9;
}

/* 【核心修改】附加信息内容区域样式 */
.additional-info-content {
  padding: 0 30rpx 30rpx; /* 整个内容区增加左右和底部内边距 */
}

/* 【核心修改】分段控件样式 */
.segmented-control {
  display: flex;
  background-color: #e9e9e9; /* 浅灰色背景 */
  border-radius: 10rpx;
  padding: 6rpx; /* 内部留白 */
  margin-bottom: 30rpx; /* 与下方内容区域的间距 */
  box-shadow: inset 0 1rpx 3rpx rgba(0,0,0,0.08); /* 内部阴影效果 */
}
.segment-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 26rpx;
  color: #666;
  border-radius: 8rpx;
  transition: all 0.2s;
}
.segment-item.active {
  background-color: #fff; /* 激活项白色背景 */
  color: #ff6b9d; /* 激活项粉色文字 */
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1); /* 激活项的浮动阴影 */
}

/* 【核心修改】Tab内容区域样式 */
.tab-content {
  padding-top: 10rpx; /* 与分段控件的间距 */
}

/* 内部滚动容器样式 - 只有这里可以滚动 */
.internal-scroll {
  flex: 1;
  min-height: 0;
  max-height: none;
}

/* 备注框样式 (现在在 .tab-content 内部) */
.form-textarea {
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 20rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 1.5;
  height: 180rpx; /* 固定高度，约等于3行文字的高度，不再自动扩展 */
}

/* 自定义字段样式 (现在在 .tab-content 内部) */
.custom-field-list {
  /* padding: 0 30rpx; */ /* 移除，因为additional-info-content已经有左右padding */
}
.add-field-btn-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #07c160;
  font-size: 28rpx;
}
.add-field-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.field-action-btn-wrapper {
  flex-shrink: 0; /* 防止被压缩 */
  margin-left: 10rpx;
  padding: 10rpx; /* 增大点击区域 */
}
.field-action-icon {
  width: 48rpx;
  height: 48rpx;
}

.custom-field-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.custom-field-item:last-child {
  margin-bottom: 0;
}
.field-input {
  background-color: #fff;
  border: 1px solid #eee;
  border-radius: 10rpx;
  padding: 15rpx;
  height: 70rpx;
  font-size: 28rpx;
}
.field-label {
  flex-basis: 30%;
  margin-right: 10rpx;
}
.field-value {
  flex: 1;
  margin-right: 10rpx;
}


/* 苹果科技风格底部操作按钮 - 调整位置 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 10;
}

.save-btn {
  flex: 1;
  margin-right: 20rpx;
}

.delete-btn {
  width: 180rpx;
  margin-left: 0;
}

.save-btn, .delete-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-radius: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  position: relative;
  overflow: hidden;
}

.save-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
