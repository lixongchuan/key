  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 内部滚动区域 */
.internal-scroll {
  flex: 1;
  min-height: 0;
}

/* 表单文本区域 */
.form-textarea {
  background-color: #fff;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 24rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 30rpx;
  line-height: 1.6;
  color: #1d1d1f;
  font-weight: 400;
  min-height: 200rpx;
}

/* 自定义字段样式 */
.custom-fields {
  flex: 1;
}

.custom-field-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06);
}

.field-input {
  background-color: transparent;
  border: none;
  outline: none;
  font-size: 28rpx;
  color: #1d1d1f;
  font-weight: 400;
  flex: 1;
}

.field-input::placeholder {
  color: rgba(142, 142, 147, 0.7);
}

.field-label {
  flex-basis: 35%;
  margin-right: 16rpx;
}

.field-value {
  flex: 1;
  margin-right: 16rpx;
}

.field-remove {
  flex-shrink: 0;
  padding: 8rpx;
}

.remove-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.remove-icon:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 添加字段按钮 */
.add-field-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 16rpx;
  margin-top: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  color: #07c160;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.add-field-btn:active {
  background-color: #f0f1f2;
  border-color: #07c160;
  transform: translateY(-1rpx);
}

.add-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  opacity: 0.8;
}

/* 弹窗样式 */
.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(255, 107, 157, 0.4) 0%, rgba(196, 69, 105, 0.4) 100%);
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  z-index: 999;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.popup-overlay.show {
  opacity: 1;
}

.popup-container {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #ffffff 0%, #f8fafc 100%);
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  box-shadow: 0 -8rpx 40rpx rgba(255, 107, 157, 0.3);
  z-index: 1000;
  transform: translateY(100%);
  transition: transform 0.4s cubic-bezier(0.25, 0.1, 0.25, 1);
  max-height: 80vh;
  overflow: hidden;
}

.popup-container.show {
  transform: translateY(0);
}

.popup-content {
  padding: 40rpx;
  position: relative;
}

.popup-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.2);
}

.popup-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1d1d1f;
  letter-spacing: 0.5rpx;
}

.popup-close {
  width: 52rpx;
  height: 52rpx;
  opacity: 0.7;
  transition: all 0.2s ease;
}

.popup-close:active {
  opacity: 0.9;
  transform: scale(0.95);
}

.password-display {
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border: 1rpx solid rgba(255, 107, 157, 0.2);
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 140rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
}

.password-display:active {
  transform: translateY(-2rpx);
  box-shadow: 0 2rpx 16rpx rgba(255, 107, 157, 0.15);
}

.password-placeholder {
  color: rgba(142, 142, 147, 0.8);
  font-size: 32rpx;
  font-style: italic;
}

.password-text {
  font-size: 40rpx;
  color: #1d1d1f;
  font-weight: 600;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
  letter-spacing: 1rpx;
  word-break: break-all;
  text-align: center;
}

.password-options {
  margin-bottom: 32rpx;
}

.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.option-label {
  font-size: 30rpx;
  color: #1d1d1f;
  font-weight: 500;
}

.length-input {
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  width: 120rpx;
  height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  color: #1d1d1f;
  font-weight: 500;
  background-color: #fff;
}

.length-input.invalid {
  border-color: #ff3b30;
  background-color: #fff5f5;
}

.checkbox-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.checkbox-item {
  flex: 1;
  min-width: 45%;
  font-size: 28rpx;
  color: #1d1d1f;
  display: flex;
  align-items: center;
  padding: 16rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.checkbox-item:active {
  background-color: #f0f1f2;
  transform: translateY(-1rpx);
}

.popup-actions {
  display: flex;
  gap: 20rpx;
}

.generate-action-btn {
  flex: 1;
  background: linear-gradient(135deg, #f8fafc 0%, #ffffff 100%);
  border: 1rpx solid rgba(255, 107, 157, 0.3);
  color: #ff6b9d;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  box-shadow: 0 2rpx 16rpx rgba(255, 107, 157, 0.1);
}

.generate-action-btn:active {
  transform: translateY(-2rpx);
  box-shadow: 0 1rpx 12rpx rgba(255, 107, 157, 0.15);
}

.use-action-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  color: white;
  height: 96rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.25, 0.1, 0.25, 1);
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 157, 0.3);
  position: relative;
  overflow: hidden;
}

.use-action-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.use-action-btn:active {
  background: linear-gradient(135deg, #e55b8c 0%, #b03b5a 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 2rpx 16rpx rgba(255, 107, 157, 0.4);
}

.use-action-btn:active::before {
  left: 100%;
}

.use-action-btn[disabled] {
  background: #c8c9cc !important;
  color: #fff !important;
  transform: none !important;
  box-shadow: none !important;
}

/* 历史记录弹窗样式 */
.history-list {
  max-height: 400rpx;
  padding: 0 20rpx;
}

.history-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(255, 107, 157, 0.2);
}

.history-item:last-child {
  border-bottom: none;
}

.history-info {
  flex: 1;
  margin-right: 20rpx;
}

.history-password {
  font-size: 30rpx;
  color: #1d1d1f;
  font-weight: 500;
  font-family: 'SF Mono', 'Monaco', 'Inconsolata', 'Fira Code', monospace;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.history-date {
  font-size: 24rpx;
  color: rgba(142, 142, 147, 0.8);
}

.history-actions {
  display: flex;
  gap: 12rpx;
}

.history-btn {
  padding: 12rpx 8rpx !important;
  border-radius: 16rpx !important;
  font-size: 26rpx !important;
  font-weight: 500 !important;
  border: none !important;
  transition: all 0.3s ease !important;
  width: 90rpx !important; /* 强制固定宽度为90rpx，完美贴合2个字 */
  height: auto !important;
  text-align: center !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  white-space: nowrap !important;
  box-sizing: border-box !important;
}

.history-btn.copy-btn {
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  border: 1rpx solid rgba(255, 107, 157, 0.3);
  color: #ff6b9d;
}

.history-btn.copy-btn:active {
  transform: translateY(-1rpx);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.2);
}

.history-btn.use-btn {
  background: linear-gradient(135deg, #ff6b9d 0%, #c44569 100%);
  color: white;
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 157, 0.3);
}

.history-btn.use-btn:active {
  transform: translateY(-1rpx);
  box-shadow: 0 1rpx 6rpx rgba(255, 107, 157, 0.4);
}
