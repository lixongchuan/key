.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 48rpx 40rpx; /* 缩小上下内边距，避免视觉过空 */
  box-sizing: border-box;
  background-color: #f5f5f7; /* 更接近苹果系统灰 */
  min-height: 100vh;
}

/* 顶部标题区（与新的 wxml 对齐） */
.hero {
  text-align: center;
  margin-top: 4vh;      /* 再上移一点，减少中部留白 */
  margin-bottom: 20rpx; /* 更紧凑 */
}
.title {
  font-size: 56rpx;
  font-weight: 700;
  color: #111;
  letter-spacing: -0.5rpx;
  margin-bottom: 40rpx; /* 标题与插图之间空两到三行 */
}

.subtitle {
  font-size: 30rpx;
  color: #6b6b6f;
  margin-bottom: 20rpx; /* 进一步缩小间距 */
  text-align: center;
  line-height: 1.6;
}

.form {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.input-wrapper {
  width: 100%;
  position: relative;
  margin-bottom: 24rpx; /* 更紧凑 */
}

.input-field {
  width: 100%;
  height: 100rpx;
  padding: 0 90rpx 0 35rpx;
  background-color: #ffffff;
  border-radius: 18rpx;
  font-size: 34rpx;
  box-sizing: border-box;
  border: 1rpx solid #e5e5ea;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.placeholder {
  color: #c0c0c0;
}

/* 插画 + 文案（方案1） */
.illustration {
  width: 100%;
  margin: 10rpx 0 16rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.illu-img {
  /* 放大插画，并保持等比缩放，水平居中 */
  width: 92%;
  max-width: 620rpx;     /* 再大一些 */
  max-height: 360rpx;    /* 提高高度上限 */
  height: auto;
  opacity: 0.98;
  border-radius: 18rpx;
  box-shadow: 0 10rpx 28rpx rgba(0,0,0,.07);
}
.illu-text {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #8e8e93;
  text-align: center;
}

/* 轻步骤（方案2） */
.stepper {
  margin: 14rpx 0 22rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.stepper .step {
  font-size: 40rpx;      /* 再加大一点，更清晰的引导 */
  color: #0a84ff;        /* iOS 蓝 */
  font-weight: 800;      /* 更强的存在感 */
  letter-spacing: -0.5rpx;
}
.stepper .divider { display: none; } /* 设置页只显示 1/2，隐藏分隔线 */
.stepper .step.active { color: #0a84ff; }

.eye-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 52rpx;
  height: 52rpx;
  padding: 5rpx;
  opacity: 0.7;
}

/* 密码强度建议列表样式 */
/* 规则提示（实时反馈） */
/* 轻提示区域（与规则列表不同） */
.strength-brief {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 16rpx 12rpx;
  margin: 0 0 24rpx 0;
  color: #6b6b6f;
}
.brief-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 12rpx;
}
.brief-text {
  font-size: 28rpx;
  line-height: 1.4;
}

.suggestion-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.suggestion-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.suggestion-text {
  font-size: 28rpx;
  color: #8a8a8e;
  line-height: 1.4;
}

.suggestion-text.satisfied {
  color: #34c759; /* iOS 绿色 */
  font-weight: 500;
}

/* 现代按钮（随可用态变化） */
.setup-button {
  width: 100%;
  height: 96rpx;          /* 按钮整体更小一些 */
  line-height: 96rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 20rpx;
  margin-top: 40rpx;      /* 缩小与上方间距 */
  transition: all 0.2s ease;
}
.setup-button::after { border: none; }
.setup-button.enabled {
  background-color: #0a84ff; /* iOS 蓝 */
  box-shadow: 0 8rpx 20rpx rgba(10, 132, 255, 0.22);
}
.setup-button.disabled {
  background-color: #d1d1d6; /* iOS 灰 */
  color: #fff;
}
.setup-button:active { transform: translateY(2rpx); }
